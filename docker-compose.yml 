version: '3.9'

services:

  mysql:
    image: mysql:8.0
    container_name: mysql-db
    restart: always
    environment:
      MYSQL_DATABASE: crud_app
      MYSQL_USER: hibernate
      MYSQL_PASSWORD: hibernate123
      MYSQL_ROOT_PASSWORD: root
    ports:
      - "3306:3306"
    volumes:
      - mysql_data:/var/lib/mysql

  redis:
    image: redis:7
    container_name: redis-cache
    restart: always
    ports:
      - "6379:6379"

  api:
    build: .
    container_name: spring-api
    depends_on:
      - mysql
      - redis
    ports:
      - "8080:8080"
    environment:
      SPRING_DATASOURCE_URL: jdbc:mysql://mysql:3306/crud_app
      SPRING_DATASOURCE_USERNAME: hibernate
      SPRING_DATASOURCE_PASSWORD: hibernate123
      SPRING_REDIS_HOST: redis
      SPRING_REDIS_PORT: 6379
    restart: always

volumes:
  mysql_data:
